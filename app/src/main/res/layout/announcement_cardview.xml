<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/announcementImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_announcement"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/announcementTitle"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:layout_toEndOf="@+id/announcementImage"
            android:layout_toRightOf="@+id/announcementImage"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizePresetSizes="2sp"
            android:autoSizeTextType="uniform"
            android:text="Announcement Title"
            android:textColor="#000"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/announcementDate"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/announcementTitle"
            android:layout_toRightOf="@+id/announcementTitle"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="14sp"
            android:autoSizePresetSizes="2sp"
            android:autoSizeTextType="uniform"
            android:text="Date"

            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/announcementContext"
            android:layout_width="296dp"
            android:layout_height="67dp"

            android:layout_below="@+id/announcementTitle"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/announcementImage"
            android:layout_toRightOf="@+id/announcementImage"
            android:text="Context"
            android:textColor="#a9a9a9"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="10sp"

            android:autoSizePresetSizes="2sp"></TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>