<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Assignment.AssignmentFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/courseIDAsDetailTeacher"
        android:text="Course ID:"
        android:layout_marginStart="140dp"
        android:textSize="22sp"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="bold"

        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/courseIDAsDetailTeacher"
        android:id="@+id/assignmentTitleTeacher"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:id="@+id/assignmentTitleTextTeacher"
            android:text="Assignment Title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"

            />
    </HorizontalScrollView>
    <ImageView
        android:id="@+id/assignmentImgTeacher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_assignment_black_24dp"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:layout_below="@id/assignmentTitleTeacher"/>
    <TextView
        android:id="@+id/assignmentStartTeacher"
        android:text="Start Date: "

        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/assignmentImgTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignmentTitleTeacher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignmentStartDateTeacher"
        android:layout_toEndOf="@+id/assignmentStartTeacher"
        android:text="@string/_20_10_2020"
        android:layout_below="@+id/assignmentTitleTeacher"
        android:textSize="20sp"

        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/assignmentDueTeacher"
        android:text="Due Date: "

        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/assignmentImgTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignmentStartDateTeacher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assignmentDueDateTeacher"
        android:layout_toEndOf="@+id/assignmentDueTeacher"
        android:text="@string/_20_10_2020"
        android:layout_below="@+id/assignmentStartDateTeacher"
        android:textSize="20sp"

        android:textColor="#FF0000"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/assignmentContextDetailTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignmentImgTeacher"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        android:text="Assignment Context"
        android:textColor="#a9a9a9"
        android:textSize="20sp" />

</RelativeLayout>