<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plhomework">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Course.StreamActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Activities.Assignment.EditAssignmentActivity" />
        <activity
            android:name=".Activities.Assignment.AssignmentDetailTeacherActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Assignment.AssignmentDetailStudentActivity"
            android:label="AssignmentDetailActivity_Student"
            android:parentActivityName=".Activities.Assignment.AddAssignmentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Assignment.AddAssignmentActivity" />
        <activity
            android:name=".Activities.Assignment.AssignmentActivity"
            android:label="AssignmentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.Message.MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Announcement.EditAnnouncementActivity" />
        <activity android:name=".Activities.Announcement.AnnouncementDetailActivity" />
        <activity
            android:name=".Activities.Announcement.AddAnnouncementActivity"
            android:parentActivityName=".Activities.Course.CourseDetailActivity" />
        <activity android:name=".Activities.Course.EditCourseActivity" />
        <activity
            android:name=".Activities.Course.CourseDetailActivity"
            android:parentActivityName=".Activities.Course.CourseFeedActivity" />
        <activity android:name=".Activities.Course.AddCourseActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Course.CourseFeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>